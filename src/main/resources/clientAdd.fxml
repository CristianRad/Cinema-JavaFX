<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Spinner?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" prefHeight="280.0" prefWidth="250.0" xmlns="http://javafx.com/javafx/8.0.172-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="UI.ClientAddController">
   <children>
      <Spinner fx:id="spnId" editable="true" initialValue="0" max="2000000000" min="0"/>
      <TextField fx:id="txtName" promptText="Name"/>
      <TextField fx:id="txtSurname" promptText="Surname"/>
      <TextField fx:id="txtCnp" promptText="CNP"/>
      <VBox alignment="CENTER" prefHeight="30.0" prefWidth="100.0">
         <children>
            <Label prefHeight="30.0" text="Date of Birth:"/>
         </children></VBox>
      <HBox layoutX="10.0" layoutY="110.0" prefHeight="25.0" prefWidth="200.0">
         <children>
            <TextField fx:id="txtDayOfBirth" promptText="Day"/>
            <TextField fx:id="txtMonthOfBirth" promptText="Month"/>
            <TextField fx:id="txtYearOfBirth" promptText="Year"/>
         </children></HBox>
      <VBox alignment="CENTER" prefHeight="30.0" prefWidth="100.0">
         <children>
            <Label prefHeight="30.0" text="Date of Registration:"/>
         </children>
      </VBox>
      <HBox layoutX="10.0" layoutY="110.0" prefHeight="25.0" prefWidth="200.0">
         <children>
            <TextField fx:id="txtDayOfRegistration" promptText="Day"/>
            <TextField fx:id="txtMonthOfRegistration" promptText="Month"/>
            <TextField fx:id="txtYearOfRegistration" promptText="Year"/>
         </children>
      </HBox>
      <TextField fx:id="txtPoints" promptText="Card Client Points"/>
      <VBox alignment="CENTER" prefHeight="200.0" prefWidth="100.0" spacing="5.0">
         <children>
            <Button fx:id="btnAdd" onAction="#btnAddClick" text="Add"/>
            <Button fx:id="btnCancel" onAction="#btnCancelClick" text="Cancel"/>
         </children>
      </VBox>
   </children>
</VBox>
