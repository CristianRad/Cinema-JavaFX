<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<?import javafx.scene.control.cell.PropertyValueFactory?>
<VBox alignment="TOP_CENTER" prefHeight="900.0" prefWidth="1400.0" spacing="10.0" xmlns="http://javafx.com/javafx/8.0.172-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="UI.SearchController">
   <children>
      <Label text="Full Text Search">
         <font>
            <Font name="System Bold" size="18.0" />
         </font>
      </Label>
      <VBox prefHeight="800.0" prefWidth="100.0">
         <children>
            <Label text="Search Films, Clients, Reservations:" />
            <HBox prefHeight="50.0" prefWidth="200.0" spacing="10.0">
               <children>
                  <TextField fx:id="txtSearchText" prefWidth="400.0" promptText="Enter text to search..." />
                  <HBox prefHeight="50.0" prefWidth="200.0">
                     <children>
                        <Button fx:id="btnSearch" onAction="#btnSearchClick" text="Search" />
                        <Button fx:id="btnCancel" onAction="#btnCancelClick" text="Cancel" />
                     </children>
                  </HBox>
               </children>
            </HBox>
            <HBox alignment="CENTER" prefHeight="40.0" prefWidth="600.0" spacing="380.0">
               <children>
                  <Label text="         Film Results">
                     <font>
                        <Font name="System Bold" size="16.0" />
                     </font></Label>
                  <Label layoutX="10.0" layoutY="10.0" text="Client Results">
                     <font>
                        <Font name="System Bold" size="16.0" />
                     </font></Label>
                  <Label layoutX="38.0" layoutY="10.0" text="Reservations">
                     <font>
                        <Font name="System Bold" size="16.0" />
                     </font></Label>
               </children></HBox>
            <HBox alignment="TOP_CENTER" prefHeight="100.0" prefWidth="200.0" spacing="40.0">
               <children>
                  <TableView fx:id="tblFilms" prefHeight="410.0" prefWidth="400.0">
                    <columns>
                      <TableColumn fx:id="colFilmId" prefWidth="50.0" text="ID">
                        <cellValueFactory>
                           <PropertyValueFactory property="id"/>
                        </cellValueFactory>
                      </TableColumn>
                      <TableColumn fx:id="colFilmTitle" prefWidth="140.0" text="Title">
                        <cellValueFactory>
                           <PropertyValueFactory property="title"/>
                        </cellValueFactory>
                      </TableColumn>
                      <TableColumn fx:id="colFilmYear" prefWidth="70.0" text="Year">
                        <cellValueFactory>
                           <PropertyValueFactory property="year"/>
                        </cellValueFactory>
                      </TableColumn>
                      <TableColumn fx:id="colFilmPrice" prefWidth="70.0" text="Price">
                      <cellValueFactory>
                         <PropertyValueFactory property="year"/>
                      </cellValueFactory>
                      </TableColumn>
                      <TableColumn fx:id="colFilmOnScreen" prefWidth="70.0" text="On Screen">
                      <cellValueFactory>
                         <PropertyValueFactory property="onScreen"/>
                      </cellValueFactory>
                      </TableColumn>
                    </columns>
                  </TableView>
                  <TableView fx:id="tblClients" prefHeight="410.0" prefWidth="500.0">
                     <columns>
                        <TableColumn fx:id="colClientId" prefWidth="30.0" text="ID">
                           <cellValueFactory>
                              <PropertyValueFactory property="id"/>
                           </cellValueFactory>
                        </TableColumn>
                        <TableColumn fx:id="colClientName" prefWidth="60.0" text="Name">
                           <cellValueFactory>
                              <PropertyValueFactory property="name"/>
                           </cellValueFactory>
                        </TableColumn>
                        <TableColumn fx:id="colClientSurname" prefWidth="90.0" text="Surname">
                           <cellValueFactory>
                              <PropertyValueFactory property="surname"/>
                           </cellValueFactory>
                        </TableColumn>
                        <TableColumn fx:id="colClientCnp" prefWidth="110.0" text="CNP">
                           <cellValueFactory>
                              <PropertyValueFactory property="cnp"/>
                           </cellValueFactory>
                        </TableColumn>
                        <TableColumn fx:id="colClientBirthday" prefWidth="80.0" text="Birthday">
                           <cellValueFactory>
                              <PropertyValueFactory property="birthday"/>
                           </cellValueFactory>
                        </TableColumn>
                        <TableColumn fx:id="colClientRegistrationDay" prefWidth="80.0" text="Reg. Day">
                           <cellValueFactory>
                              <PropertyValueFactory property="registrationDay"/>
                           </cellValueFactory>
                        </TableColumn>
                        <TableColumn fx:id="colClientPoints" prefWidth="50.0" text="Points">
                           <cellValueFactory>
                              <PropertyValueFactory property="points"/>
                           </cellValueFactory>
                        </TableColumn>
                     </columns>
                  </TableView>
                  <TableView fx:id="tblReservations" prefHeight="410.0" prefWidth="350.0">
                     <columns>
                        <TableColumn fx:id="colReservationId" prefWidth="60.0" text="ID">
                           <cellValueFactory>
                              <PropertyValueFactory property="id"/>
                           </cellValueFactory>
                        </TableColumn>
                        <TableColumn fx:id="colReservationFilmId" prefWidth="65.0" text="Film ID">
                           <cellValueFactory>
                              <PropertyValueFactory property="idFilm"/>
                           </cellValueFactory>
                        </TableColumn>
                        <TableColumn fx:id="colReservationClientId" prefWidth="65.0" text="Client ID">
                           <cellValueFactory>
                              <PropertyValueFactory property="idCardClient"/>
                           </cellValueFactory>
                        </TableColumn>
                        <TableColumn fx:id="colReservationDate" prefWidth="90.0" text="Date">
                           <cellValueFactory>
                              <PropertyValueFactory property="date"/>
                           </cellValueFactory>
                        </TableColumn>
                        <TableColumn fx:id="colReservationTime" prefWidth="70.0" text="Time">
                           <cellValueFactory>
                              <PropertyValueFactory property="time"/>
                           </cellValueFactory>
                        </TableColumn>
                     </columns>
                  </TableView>
               </children>
            </HBox>
         </children>
      </VBox>
   </children>
</VBox>
